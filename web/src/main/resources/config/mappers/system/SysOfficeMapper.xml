	<insert id="insert" parameterType="sysOffice">
		<!-- <selectKey resultType="long" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID
		</selectKey> -->
		insert into sys_office(
			id,
			name,
			parent_id,
			area,
			type,
			grade,
			address,
			zip_code,
			master,
			phone,
			fax,
			email,
			add_time,
			add_user,
			remark,
			is_delete,
			city,
			province,
			sort,
			office_number,
			office_bank,
			office_bank_card,
			office_card			
		)
		values (
			#{id},
			#{name},
			#{parentId},
			#{area},
			#{type},
			#{grade},
			#{address},
			#{zipCode},
			#{master},
			#{phone},
			#{fax},
			#{email},
			#{addTime},
			#{addUser},
			#{remark},
			#{isDelete},
			#{city},
			#{province},
			#{sort},
			#{officeNumber},
			#{officeBank},
			#{officeBankCard},
			#{officeCard}		
		)
	</insert>
	
	<update id="update" parameterType="sysOffice">
		update sys_office
		set
			name=#{name},
			parent_id=#{parentId},
			area=#{area},
			type=#{type},
			grade=#{grade},
			address=#{address},
			zip_code=#{zipCode},
			master=#{master},
			phone=#{phone},
			fax=#{fax},
			email=#{email},
			update_time= now(),
			update_user=#{updateUser},
			remark=#{remark},
			is_delete=#{isDelete},
			city=#{city},
			province=#{province},
			sort=#{sort},
			office_number=#{officeNumber},
			office_bank=#{officeBank},
			office_bank_card=#{officeBankCard},
			office_card=#{officeCard}		
		where
			id = #{id}
	</update>
	
