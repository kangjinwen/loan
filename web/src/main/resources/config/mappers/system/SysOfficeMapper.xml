    <select id="getOfficeListByTypeAndParentId"  parameterType="java.util.HashMap" resultType="java.util.HashMap">
    	select id,name from sys_office where is_delete = 0
    	<if test="type!=null and type!='' ">
			and type = #{type}
		</if>
    	<if test="officeId !=null and officeId !='' ">
			AND 
			( id  = #{officeId}
			<if test="parentOfficeId !=null and parentOfficeId !='' ">
				OR	id like concat('',#{parentOfficeId}, '%')
			</if>
			)
		</if>
    </select>
    
